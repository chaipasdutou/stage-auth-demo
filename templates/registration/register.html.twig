{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="max-w-md mx-auto bg-white p-8 rounded-xl shadow-lg">
    <h1 class="text-2xl font-bold text-center mb-6">Créer un compte</h1>

    <div id="register-app">
        <form method="post" action="#" @submit.prevent="submitForm" class="space-y-6">
            {#Email#}
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                    Email
                </label>
                <input
                    type="email"
                    id="email"
                    v-model="formData.email"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required
                >
            </div>

            {#Mot de passe#}
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
                    Mot de passe
                </label>
                <div class="relative">
                    <input
                        :type="showPassword ? 'text' : 'password'"
                        id="password"
                        v-model="formData.password"
                        @input="validatePassword"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        required
                    >
                    <button
                        type="button"
                        @click="showPassword = !showPassword"
                        class="absolute right-3 top-2 text-gray-500"
                    >
                        <i :class="showPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                    </button>
                </div>

                {# Indicateurs de validation #}
                <div class="mt-3 space-y-1">
                    <div class="flex items-center">
                        <div class="w-6">
                            <i :class="validation.minLength ? 'fas fa-check-circle text-green-500' : 'fas fa-times-circle text-gray-300'"></i>
                        </div>
                        <span :class="validation.minLength ? 'text-green-600' : 'text-gray-500'">
                            8 caractères minimum
                        </span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-6">
                            <i :class="validation.hasUpperCase ? 'fas fa-check-circle text-green-500' : 'fas fa-times-circle text-gray-300'"></i>
                        </div>
                        <span :class="validation.hasUpperCase ? 'text-green-600' : 'text-gray-500'">
                            Au moins une majuscule
                        </span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-6">
                            <i :class="validation.hasNumber ? 'fas fa-check-circle text-green-500' : 'fas fa-times-circle text-gray-300'"></i>
                        </div>
                        <span :class="validation.hasNumber ? 'text-green-600' : 'text-gray-500'">
                            Au moins un chiffre
                        </span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-6">
                            <i :class="validation.hasSpecialChar ? 'fas fa-check-circle text-green-500' : 'fas fa-times-circle text-gray-300'"></i>
                        </div>
                        <span :class="validation.hasSpecialChar ? 'text-green-600' : 'text-gray-500'">
                            Au moins un caractère spécial (@$!%*?&)
                        </span>
                    </div>
                </div>
            </div>

            {# Confirmation mot de passe #}
            <div>
                <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">
                    Confirmer le mot de passe
                </label>
                <input
                    type="password"
                    id="confirmPassword"
                    v-model="formData.confirmPassword"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required
                >
                <p v-if="!passwordsMatch && formData.confirmPassword" class="text-red-500 text-sm mt-1">
                    Les mots de passe ne correspondent pas
                </p>
            </div>

            {# Bouton d'inscription #}
            <button
                type="submit"
                :disabled="!isFormValid"
                :class="isFormValid ? 'bg-blue-500 hover:bg-blue-600 cursor-pointer' : 'bg-gray-300 cursor-not-allowed'"
                class="w-full text-white font-medium py-3 rounded-lg transition duration-200"
            >
                S'inscrire
            </button>

            {# Lien vers login #}
            <p class="text-center text-sm text-gray-600">
                Déjà un compte ? 
                <a href="{{ path('app_login') }}" class="text-blue-500 hover:text-blue-700 font-medium">
                    Se connecter
                </a>
            </p>
        </form>
    </div>
    {# Fin application Vue #}
</div>

<script>
const { createApp, ref, computed, watch } = Vue;

createApp({
    setup() {
        // Données du formulaire
        const formData = ref({
            email: '',
            password: '',
            confirmPassword: ''
        });

        // État de validation
        const validation = ref({
            minLength: false,
            hasUpperCase: false,
            hasNumber: false,
            hasSpecialChar: false
        });

        // Autres états
        const showPassword = ref(false);

        // Validation du mot de passe
        const validatePassword = () => {
            const pwd = formData.value.password;
            
            validation.value.minLength = pwd.length >= 8;
            validation.value.hasUpperCase = /[A-Z]/.test(pwd);
            validation.value.hasNumber = /\d/.test(pwd);
            validation.value.hasSpecialChar = /[@$!%*?&]/.test(pwd);
        };

        // Vérification que tous les critères sont valides
        const isPasswordValid = computed(() => {
            return Object.values(validation.value).every(v => v === true);
        });

        // Vérification que les mots de passe correspondent
        const passwordsMatch = computed(() => {
            return formData.value.password === formData.value.confirmPassword;
        });

        // Validation globale du formulaire
        const isFormValid = computed(() => {
            return isPasswordValid.value && 
                   passwordsMatch.value && 
                   formData.value.email.includes('@');
        });

        // Soumission du formulaire
        const submitForm = () => {
            if (!isFormValid.value) {
                alert('Veuillez corriger les erreurs dans le formulaire');
                return;
            }
            
            // Ici, tu enverrais les données à Symfony
            // Pour l'instant, juste un log
            console.log('Données à envoyer:', formData.value);
            alert('Formulaire valide ! En production, cela enverrait les données au serveur.');
            
            // En production, tu ferais :
            // fetch('/register', { method: 'POST', body: JSON.stringify(formData.value) })
        };

        // Watch pour valider automatiquement quand le mot de passe change
        watch(() => formData.value.password, validatePassword);

        return {
            formData,
            validation,
            showPassword,
            passwordsMatch,
            isPasswordValid,
            isFormValid,
            validatePassword,
            submitForm
        };
    }
}).mount('#register-app');
</script>
{% endblock %}
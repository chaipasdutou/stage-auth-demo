{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="max-w-md mx-auto bg-white p-8 rounded-xl shadow-lg mt-16">
    <h1 class="text-2xl font-bold text-center mb-6">Créer un compte</h1>

    <div id="register-app">
        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate', 'class': 'space-y-6'}}) }}
        
        {# Email #}
        <div>
            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent', 'v-model': 'formData.email', '@input': 'formData.email = $event.target.value'}}) }}
        </div>

        {# Mot de passe #}
        <div>
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            <div class="relative">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent', '@input': 'updatePassword', 'v-model': 'formData.password', ':type': "showPassword ? 'text' : 'password'"}}) }}
                <button
                    type="button"
                    @click="showPassword = !showPassword"
                    class="absolute right-3 top-2 text-gray-500"
                >
                    <i :class="showPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                </button>
            </div>

            {# Indicateurs de validation #}
            <div class="mt-3 space-y-1">
                <div class="flex items-center">
                    <div class="w-6">
                        <i :class="validation.minLength ? 'fas fa-check-circle text-green-500' : 'fas fa-times-circle text-gray-300'"></i>
                    </div>
                    <span :class="validation.minLength ? 'text-green-600' : 'text-gray-500'">
                        8 caractères minimum
                    </span>
                </div>
                <div class="flex items-center">
                    <div class="w-6">
                        <i :class="validation.hasUpperCase ? 'fas fa-check-circle text-green-500' : 'fas fa-times-circle text-gray-300'"></i>
                    </div>
                    <span :class="validation.hasUpperCase ? 'text-green-600' : 'text-gray-500'">
                        Au moins une majuscule
                    </span>
                </div>
                <div class="flex items-center">
                    <div class="w-6">
                        <i :class="validation.hasNumber ? 'fas fa-check-circle text-green-500' : 'fas fa-times-circle text-gray-300'"></i>
                    </div>
                    <span :class="validation.hasNumber ? 'text-green-600' : 'text-gray-500'">
                        Au moins un chiffre
                    </span>
                </div>
                <div class="flex items-center">
                    <div class="w-6">
                        <i :class="validation.hasSpecialChar ? 'fas fa-check-circle text-green-500' : 'fas fa-times-circle text-gray-300'"></i>
                    </div>
                    <span :class="validation.hasSpecialChar ? 'text-green-600' : 'text-gray-500'">
                        Au moins un caractère spécial (@$!%*?&)
                    </span>
                </div>
            </div>
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        {# Accord des conditions #}
        <div class="flex items-center">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-blue-600', 'v-model': 'formData.agreeTerms'}}) }}
            {{ form_label(registrationForm.agreeTerms, "J'accepte les conditions d'utilisation", {'label_attr': {'class': 'ml-2 text-sm text-gray-700'}}) }}
        </div>
        {{ form_errors(registrationForm.agreeTerms) }}

        {# Bouton d'inscription #}
        <button
            type="submit"
            :disabled="!isFormValid"
            :class="isFormValid ? 'bg-blue-500 hover:bg-blue-600 cursor-pointer' : 'bg-gray-300 cursor-not-allowed'"
            class="w-full text-white font-medium py-3 rounded-lg transition duration-200"
        >
            S'inscrire
        </button>

        {# Lien vers login #}
        <p class="text-center text-sm text-gray-600">
            Déjà un compte ? 
            <a href="{{ path('app_login') }}" class="text-blue-500 hover:text-blue-700 font-medium">
                Se connecter
            </a>
        </p>

        {{ form_end(registrationForm) }}
    </div>
</div>

<script>
const { createApp, ref, computed, watch } = Vue;

createApp({
    setup() {
        const formData = ref({
            email: '',
            password: '',
            agreeTerms: false
        });

        const validation = ref({
            minLength: false,
            hasUpperCase: false,
            hasNumber: false,
            hasSpecialChar: false
        });

        const showPassword = ref(false);

        const updatePassword = (event) => {
            formData.value.password = event.target.value;
            validatePassword();
        };

        const validatePassword = () => {
            const pwd = formData.value.password;
            
            validation.value.minLength = pwd.length >= 8;
            validation.value.hasUpperCase = /[A-Z]/.test(pwd);
            validation.value.hasNumber = /\d/.test(pwd);
            validation.value.hasSpecialChar = /[@$!%*?&]/.test(pwd);
        };

        const isPasswordValid = computed(() => {
            return Object.values(validation.value).every(v => v === true);
        });

        const isFormValid = computed(() => {
            return isPasswordValid.value && 
                   formData.value.email.includes('@') &&
                   formData.value.agreeTerms;
        });

        watch(() => formData.value.password, validatePassword);

        return {
            formData,
            validation,
            showPassword,
            isPasswordValid,
            isFormValid,
            validatePassword,
            updatePassword
        };
    }
}).mount('#register-app');
</script>
{% endblock %}